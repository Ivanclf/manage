<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.activity.manage.mapper.RegistrationMapper">
    <insert id="insert" parameterType="com.activity.manage.pojo.entity.Registration">

        insert into registration
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id > 0">
                id,
            </if>
            <if test="activityId != null">
                activity_id,
            </if>
            <if test="registrationName != null and registrationName != ''">
                registration_name,
            </if>
            <if test="college != null and college != ''">
                college,
            </if>
            <if test="phone != null and phone != ''">
                phone,
            </if>
            <if test="registrationTime != null">
                registration_time,
            </if>
            <if test="checkin != null">
                checkin,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id > 0">
                #{id},
            </if>
            <if test="activityId != null">
                #{activityId},
            </if>
            <if test="registrationName != null and registrationName != ''">
                #{registrationName},
            </if>
            <if test="college != null and college != ''">
                #{college},
            </if>
            <if test="phone != null and phone != ''">
                #{phone},
            </if>
            <if test="registrationTime != null">
                #{registrationTime},
            </if>
            <if test="checkin != null">
                #{checkin},
            </if>
        </trim>
    </insert>
    <update id="checkin" parameterType="com.activity.manage.pojo.entity.Registration">
        update registration set checkin = 1 where activity_id = #{id} and phone = #{phone}
    </update>

    <select id="selectPhoneByActivity" resultType="java.lang.String">
        select phone from registration where activity_id = #{id}
    </select>

    <select id="selectActivityIdByPhone" resultType="java.lang.Long" parameterType="java.lang.String">
        select activity_id from registration where phone = #{phone}
    </select>

    <delete id="delete">
        delete from registration where id = #{activityId} and phone = #{phone}
    </delete>
</mapper>